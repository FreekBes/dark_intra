{
	"manifest_version": 3,
	"name": "__MSG_appName__",
	"short_name": "__MSG_shortAppName__",
	"version": "2.0.0",
	"version_name": "2.0.0",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"48": "images/logo48.png",
		"64": "images/logo64.png",
		"96": "images/logo96.png",
		"128": "images/logo128.png",
		"256": "images/logo256.png",
		"512": "images/logo512.png"
	},
	"options_page": "options/options.html",
	"permissions": [
		"storage"
	],
	"web_accessible_resources": [
		{
			"resources": [ "css/dark.css", "campus_specifics/codam/inject.js" ],
			"matches": [ "*://*.intra.42.fr/*" ]
		}
	],
	"content_scripts": [
		{
			"matches": [ "*://*.intra.42.fr/*" ],
			"css": [ "css/improv.css", "css/animations.css" ],
			"js": [ "js/theme.js" ],
			"run_at": "document_start"
		},
		{
			"matches": [ "*://*.intra.42.fr/*" ],
			"js": [ "js/improv.js" ],
			"run_at": "document_end"
		},
		{
			"matches": [ "*://profile.intra.42.fr/*", "*://projects.intra.42.fr/*", "*://elearning.intra.42.fr/*", "*://meta.intra.42.fr/*", "*://shop.intra.42.fr/*" ],
			"js": [ "options/sync.js" ],
			"run_at": "document_idle"
		},
		{
			"matches": [ "*://signin.intra.42.fr/users/sign_in" ],
			"js": [ "options/unsync.js" ],
			"run_at": "document_start"
		},
		{
			"matches": [ "*://profile.intra.42.fr/", "*://*.intra.42.fr/users/*" ],
			"js": [ "campus_specifics/codam/monit.js" ],
			"css": [ "campus_specifics/codam/monit.css" ],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "js/background.js"
	}
}
